<%-include("includes/head.ejs")  %>
<body>
        <%- include("partials/navbar.ejs") %>
    <div class="container mt-5" style="width: 511px;" id="loginContainer" >
        <%if (user) {%>
            <h1>welcome <%=user.user%></h1>
      <%  } else {%>
        <h1>Login</h1>
      <%}%>
    <%if(failure){%>
          <div class="alert alert-danger">
            <%=failure%>
          </div>
  <%  }%>
    <form action="/login" method="post">
        <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input type="text" placeholder="Username" class="form-control" required name="username" id="username" value=
            <% if (user) { %>
                <%=user.user%>
            <% } %>>
            <br>
            <label for="password"  class="form-label">Password</label>
            <input type="password" placeholder="Password" class="form-control" required name="password" id="password">
            <br>
            <div class="form-check">
          <input class="form-check-input"  required checked type="checkbox" name="checkbox" id="checkbox">
            <label for="checkbox" class="form-check-label">Remember me</label>
            </div>
            <div class="d-flex align-items-center">
                 <a role="button" onclick="OpenPasswordModal()" class="ms-2">forgot password</a>
            </div>
            <br>
            <div class="container-fluid">
                <button type="submit" class="btn btn-primary mt-0">Login</button>
                    <h4 class="mb-0">Don't have an account ?</h4>
                   <h5> <a href="/login/register/" class="ms-2">Register here</a></h5>
            </div>
        </div>
        </form>
    </div>
    <div class="resetPasswordOuterModal" id="hidden">
        <div class="container-fluid ResetPasswordInnerModal"> 
            <h1>Reset Password</h1>
            <div class="ModalCloseBtn" onclick="ClosePasswordModal()">
                <i class="bi bi-x fs-1"></i>
            </div>
            <div class="container container-fluid">
                <form action="" class="form-group">
                <label for="form-label">Enter security answer</label>
                <input type="text" class="form-control" placeholder="security answer"> 
                <button type="submit" class="btn btn-success" name="" id="">Submit</button>
            </form>
            </div>
        </div>
    </div>
    <%-include("includes/footer.ejs")  %>
    <script src="/script.js"></script>
    <script>
    </script>
</body>
</html>